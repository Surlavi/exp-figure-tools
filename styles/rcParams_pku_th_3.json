{
    "backend": "pgf",

    "font.family": "serif",
    "font.serif": ["Times New Roman"],
    "text.usetex": true,
    "text.latex.unicode": true,
    "pgf.rcfonts": false,
    "pgf.texsystem": "xelatex",
    "pgf.preamble": [
        "\\usepackage{xeCJK}",
        "\\PassOptionsToPackage{no-math}{fontspec}",
        "\\RequirePackage[defaultsups]{newtxtext}",
        "\\RequirePackage[cmintegrals, varg]{newtxmath}",
        "\\setmainfont{Times New Roman}"
    ],

    "axes.labelsize": 28,
    "axes.linewidth": 0.75,

    "figure.figsize": [6, 6],
    "figure.subplot.left": 0.205,
    "figure.subplot.right": 0.995,
    "figure.subplot.bottom": 0.25,
    "figure.subplot.top": 0.96,
    "figure.dpi": 150,

    "font.size": 24,
    "legend.fontsize": 24,
    "xtick.labelsize": 24,
    "ytick.labelsize": 24,

    "lines.linewidth": 2,
    "lines.markersize": 15,

    "errorbar.capsize": 8,

    "savefig.dpi": 600
}
